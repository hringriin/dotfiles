# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
interval=10
markup=pango        # for colors

[mediaplayer]
command=~/.config/i3blocks/i3blocks-gate/mocp.sh $BLOCK_BUTTON
interval=5
signal=10

[disk]
label=Boot  :
command=~/.config/i3blocks/i3blocks-gate/disk.sh -r /boot
interval=30
markup=pango

[disk]
label=Root  :
command=~/.config/i3blocks/i3blocks-gate/disk.sh -f /
interval=30
markup=pango

[memory]
markup=pango
command=~/.config/i3blocks/i3blocks-gate/mem.sh -m
label=MEM:
separator=true
interval=30

[iface]
label=  
instance=wlp3s0
color=#00FF00
interval=10
separator=false

[wifi]
instance=wlp3s0
interval=10
separator=false

[bandwidth]
instance=wlp3s0
interval=2
separator=true

[iface]
label=  
instance=enp0s25
color=#00FF00
interval=5
separator=false

[bandwidth]
instance=enp0s25
interval=2
separator=true

[iface]
label=  
instance=wwp0s20u4i6
color=#00FF00
interval=10
separator=false

[bandwidth]
instance=wwp0s20u4i6
interval=2
separator=true

[layout]
command=~/.config/i3blocks/i3blocks-gate/lang.sh
interval=5
markup=pango
separator=true

[keyindicator]
instance=CAPS
interval=1
signal=11
