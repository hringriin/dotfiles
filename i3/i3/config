# Keyboard Layout
bindsym $mod+Control+d exec setxkbmap de            # switch to german layout
bindsym $mod+Control+e exec setxkbmap en_US         # switch to us layout

# diplay blank
exec xset -dpms
exec xset s 1800 1800
