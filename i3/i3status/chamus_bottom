order += "disk /"
order += "ipv6"
order += "ethernet eth0"
order += "ethernet tun0"
order += "path_exists VPN_Home"
order += "path_exists VPN_Uni"

disk '/' {
        format = "Root   : %avail"
}

path_exists VPN_Home {
    path = "/proc/sys/net/ipv4/conf/tun0"
}

path_exists VPN_Uni {
    path = "/proc/sys/net/ipv4/conf/vpn0"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "  %ip %speed"
        format_down = "  down"
}

ethernet tun0 {
        # if you use %speed, i3status requires root privileges
        format_up = "  %ip %speed"
        format_down = "  down"
}
