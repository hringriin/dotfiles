text/plain; /usr/bin/less

# Word-like
application/msword; libreoffice --writer %s
application/vnd.oasis.opendocument.text; libreoffice --writer %s
application/odt; libreoffice %s
application/ods; libreoffice %s

# Spreadsheets
application/msword; libreoffice --calc %s

# Images
image/jpg; sxiv %s
image/jpeg; sxiv %s
image/pjpeg; sxiv %s
image/png; sxiv %s
image/gif; sxiv %s
image/tiff; evince %s
image/ttiff; evince %s

# PDFs
application/pdf; evince %s
application/x-octet-stream; evince %s
application/force-download; evince %s

# HTML
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Unidentified files
application/pgp; gpg -d | /usr/local/bin/vim %s
text/x-markdown; /usr/local/bin/vim %s

# LaTeX
text/x-tex; vim %s
