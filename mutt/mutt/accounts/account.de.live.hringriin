# vim: ft=muttrc
source ~/.mutt/passwords/password.de.live.hringriin

# Clear the sidebar off unwanted mailboxes
unmailboxes *

set smtp_url            =   "smtps://hringriin@smtp-mail.outlook.com:465/"
set from                =   "hringriin@live.de"
set realname            =   "Joschka KÃ¶ster"
set folder              =   "~/.mailfolder/de.live.hringriin/"
set spoolfile           =   "+Inbox"
set postponed           =   "+Drafts"
set record              =   "+Sent"
unset signature
#set signature           =   "/path/to/file"
